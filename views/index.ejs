<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Votr App</title>
    <%- include('partials/_head')%>

    <!-- TEST CSS/JS partial -->
    <%- include('partials/_test')%>

  </head>

  <body>
    <%- include('partials/_nav')%>
    <section class="container">
      <section class="create-poll">
        <form action="/" method="POST">
          <article class="form-group" >
            <label for="email">Email:</label>
            <input type="text" name="email" class="form-control">
          </article>
          <article class="form-group">
            <label for="title">Title:</label>
            <input type="text" name="title" class="form-control">
          </article>
          <article class="form-group">
            <label for="poll-description">Description:</label>
            <textarea type="text" name="poll-description" class="form-control" rows="3"></textarea>
          </article>
          <!--Choices: 2 predefined-->
          <article class="form-group choice-form-group">
            <label for="choice">Choice 1:</label>
            <div class="choice-inputs">
              <input type="text" name="choice" class="form-control">
              <span class="delete-choice"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </div>
            <small class="describe-expand" class="form-text text-muted"><a href="#">Expand description box</a></small>
            <div class="choice-describe">
              <label for="choice-description">Description:</label>
              <textarea type="text" name="choice-description" class="form-control" rows="3"></textarea>
            </div>
          </article>
          <article class="form-group choice-form-group">
            <label for="choice">Choice 2:</label>
            <div class="choice-inputs">
              <input type="text" name="choice" class="form-control">
              <span class="delete-choice"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </div>
            <small class="describe-expand" class="form-text text-muted"><a href="#">Expand description box</a></small>
            <div class="choice-describe">
              <label for="choice-description">Description:</label>
              <textarea type="text" name="choice-description" class="form-control" rows="3"></textarea>
            </div>
          </article>
          <!--TODO: Choices: Render added choices-->
          <!--Add choices-->
          <span class="add-choice"><i class="fa fa-plus" aria-hidden="true"></i></span>
          <div class="clear"></div>
          <!--Options & submit-->
          <div class="form-check">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input">Enable anonymous voters
            </label>
          </div>
          <input type="submit" class="btn btn-primary">Create new poll!</input>
          <button type="button" class="preview-poll btn btn-outline-success" data-toggle="modal" data-target="#modal-preview" data-whatever="@mdo">Preview</button>
        </form>
      </section>

      <section class="modal-container">
          <!--TODO: include partials/_modal-preview-->
          <%- include('partials/_modal_preview')%>
      </section>

  </section>
  </body>
</html>
